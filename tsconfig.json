{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@modules/*": ["./src/modules/*"],
      "@core/*": ["./src/core/*"],
      "@infra/*": ["./src/infra/*"],
      "@config/*": ["./src/config/*"],
      "@_shared/*": ["./src/modules/_shared/*"],
      "@test/*": ["./src/test/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
